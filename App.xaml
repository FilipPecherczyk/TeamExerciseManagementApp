<Application x:Class="TeamExerciseManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TeamExerciseManagementApp"
             xmlns:views ="clr-namespace:TeamExerciseManagementApp.BoardContentViews"
             xmlns:viewmodels ="clr-namespace:TeamExerciseManagementApp.ViewModels"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewmodels:ProfileContentViewModel}">
            <views:ProfileContentView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ReslutsContentViewModel}">
            <views:ResultsContentView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:CalendarContentViewModel}">
            <views:CalendarContentView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:GroupResultsContentViewModel}">
            <views:GroupResultsContentView/>
        </DataTemplate>

    </Application.Resources>
</Application>
